# Telegram router secrets
TELEGRAM_BOT_TOKEN=123456789:ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789abcd
TELEGRAM_CHAT_ID=123456789
TELEGRAM_PERSONA_MAP={"123456789":"operator"}
TELEGRAM_QUEUE_SIZE=25
TELEGRAM_POLL_TIMEOUT=30
TELEGRAM_MAX_ATTEMPTS=2
TELEGRAM_RATE_CAPACITY=2
